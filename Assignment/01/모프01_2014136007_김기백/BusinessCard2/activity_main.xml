<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16pt">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/image" />
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/pic">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GIBAEG KIM"
                android:layout_marginVertical="20dp"
                />
            <TextView
                android:id="@+id/assign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Koreatech, Computer Sience and Engineering"
                android:layout_marginVertical="20dp"
                android:layout_below="@+id/name"
                />
            <TextView
                android:id="@+id/tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="010-3950-7560"
                android:layout_marginVertical="20dp"
                android:layout_below="@+id/assign"
                />
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fk0214@koreatech.ac.kr"
                android:layout_marginVertical="20dp"
                android:layout_below="@+id/tel"
                />
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="충절로 1634-13"
                android:layout_marginVertical="20dp"
                android:layout_below="@+id/email"
                />

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>